/*蒙层支付*/
.mask-filter-div{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,.4);
}
.pay-block{
  position: fixed;
  bottom: 0;
  left:0;
  width: 100%;
  /*left:49rpx;*/
  /*padding: 20rpx;*/
  background: #fff;
  z-index: 111;
}
.pay-block .pricePay{
  text-align: center;
  font-size: 46rpx;
  padding:50rpx 0;
}
.pay-block .pricePay text{
  font-size: 46rpx;
  color:#000;
}
.pay-block .pricePay text span{
  font-weight: 600;
}
.pay-block .orderInfoPay{
  margin-left:26rpx;
  padding:30rpx 20rpx 24rpx 0;
  border-bottom:1px solid #eee;
}
.pay-block .orderInfoPay .left{
  color:#666;
}
.pay-block .orderInfoPay .right{
  float:right;
  color: #333;
}
.pay-block .pro-title{
  text-align: center;
  font-size:30rpx;
  padding:24rpx 0;
  border-bottom:1px solid #eee;
}
.pay-block .wx-pay{
  height:85rpx;
  width:94%;
  line-height:85rpx;
  color:#fff;
  border-radius: 3px;
  margin-top:340rpx;
  margin-bottom:30rpx;
  font-size: 30rpx;
}
.pay-block  .close-btn{
  position: absolute;
  width: 24px;
  height: 24px;
  right: 20rpx;
  top: -12px;
  border-radius: 50%;
  background: #fff;
  padding:3px;
}
.pay-block  .close-btnson{
  color: #666;
  width: 21px;
  height: 21px;
  font-size: 18px;
  border-radius: 50%;
  border: 1px solid #666;
  line-height: 21px;
  text-align: center;
}
